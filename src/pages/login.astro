---
import Base from '../layouts/Base.astro'; // adjust ONLY if your Base.astro path is different
---

<Base title="تسجيل الدخول">
  <h1 style="text-align:center;margin:2rem 0;">تسجيل الدخول</h1>

  <div style="display:grid;gap:12px;max-width:320px;margin:0 auto;">
    <button id="googleBtn" class="btn">المتابعة مع Google</button>

    <input id="email" type="email" placeholder="البريد الإلكتروني" class="input" />
    <input id="password" type="password" placeholder="كلمة المرور" class="input" />

    <div style="display:flex;gap:8px;justify-content:space-between">
      <button id="emailLogin" class="btn">تسجيل الدخول</button>
      <button id="emailRegister" class="btn">إنشاء حساب</button>
    </div>

    <button id="logoutBtn" class="btn">تسجيل الخروج</button>
    <div id="msg" style="text-align:center;margin-top:.5rem;min-height:1.2rem;"></div>
  </div>

  <style>
    .btn{
      padding:.7rem 1rem;border-radius:10px;border:1px solid #555;
      background:#222;color:#fff;cursor:pointer;
      transition: transform .06s ease, background .12s ease, box-shadow .12s ease;
    }
    .btn:active{ transform: scale(0.98); background:#2c2c2c; }
    .btn:focus-visible{
      outline:2px solid #6aa8ff; outline-offset:2px;
      box-shadow:0 0 0 3px rgba(106,168,255,.25);
    }
    .input{
      padding:.6rem .8rem;border-radius:10px;border:1px solid #555;background:#111;color:#eee;
    }
  </style>

  <!-- This is the ONLY script include we need -->
  <script type="module">
    import '../lib/login.js';
  </script>
</Base>
