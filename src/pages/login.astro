---
import Base from '../layouts/Base.astro';
---

<Base title="تسجيل الدخول">
  <h1 style="text-align:center;margin:2rem 0;">تسجيل الدخول</h1>

  <div style="display:flex;gap:1rem;justify-content:center;margin-bottom:1rem">
    <button id="googleBtn" class="btn">التسجيل مع Google</button>
    <button id="logoutBtn" class="btn">تسجيل الخروج</button>
  </div>

  <div style="max-width:360px;margin:0 auto;text-align:right">
    <label for="email">البريد الإلكتروني</label>
    <input id="email" type="email" style="width:100%;padding:.6rem;margin:.3rem 0 1rem;background:#111;color:#fff;border:1px solid #444;border-radius:8px;" />

    <label for="password">كلمة المرور</label>
    <input id="password" type="password" style="width:100%;padding:.6rem;margin:.3rem 0 1rem;background:#111;color:#fff;border:1px solid #444;border-radius:8px;" />

    <div style="display:flex;gap:.5rem;justify-content:flex-start;margin-bottom:1rem">
      <button id="emailLogin" class="btn">تسجيل الدخول بالبريد</button>
      <button id="emailRegister" class="btn">تسجيل حساب جديد</button>
    </div>

    <p id="msg" style="min-height:1.4rem;color:#9cf"></p>
  </div>

  <!-- Load the module from the correct absolute path -->
  ---
// nothing needed in the front-matter
---
<script type="module" src={Astro.resolve('../lib/login.js')}></script>




  <style>
  .btn{
    padding:.7rem 1rem;
    border-radius:10px;
    border:1px solid #555;
    background:#222;
    color:#fff;
    cursor:pointer;
    transition: transform .06s ease, background .12s ease, box-shadow .12s ease;
  }
  .btn:active{
    transform: scale(0.98);
    background:#2c2c2c;
  }
  .btn:focus-visible{
    outline: 2px solid #6aa8ff;
    outline-offset: 2px;
    box-shadow: 0 0 0 3px rgba(106,168,255,.25);
  }
</style>

</Base>
